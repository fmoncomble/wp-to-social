{
  "manifest_version": 2,
  "name": "WP to Social",
  "version": "1.1",
  "description": "Extraire et segmenter un billet de blog pour le poster sur les r\u00e9seaux sociaux",
  "homepage_url": "https://github.com/fmoncomble/wp-to-social",
  "permissions": [
    "activeTab",
    "<all_urls>",
    "clipboardWrite"
  ],
    "icons": {
    	"48": "icons/icon-48.png",
    	"96": "icons/icon-96.png",
    	"128": "icons/icon-128.png"
	},
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon-32.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "{f61b7579-c1dc-4b5f-93b5-170a9473d804}",
      "update_url": "https://github.com/fmoncomble/wp-to-social/releases/latest/download/update_manifest.json"
    }
  }
}